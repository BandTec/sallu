<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    tools:context=".HistoricoMedico"
    >


    <EditText
        android:layout_width="415dp"
        android:layout_height="200dp"
        android:background="#2FB186"
        android:id="@+id/et_cor"
        app:layout_constraintHorizontal_bias="0.495"
        android:layout_marginBottom="15dp"
        android:radius="200dp"
        app:layout_constraintVertical_bias="0.0"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/txt_titulo_historico"
        android:textColor="#D9D9D9"
        android:textSize="35sp"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:layout_marginLeft="1dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_configuracao"
        app:layout_constraintTop_toBottomOf="@+id/tv_usuario"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_marginLeft="90dp"
        android:id="@+id/iv_fotoHistorico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/arquivo"
        />

    <EditText
        android:layout_width="905px"
        android:layout_height="100dp"
        android:id="@+id/et_ficha1"
        android:hint=""
        app:layout_constraintTop_toBottomOf="@+id/iv_fotoHistorico"
        android:paddingLeft="54dp"
        android:background="#D9D9D9"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="#000000"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"
        />

    <EditText
        android:layout_width="905px"
        android:layout_height="100dp"
        android:id="@+id/et_ficha2"
        android:hint=""
        app:layout_constraintTop_toBottomOf="@+id/et_ficha1"
        android:paddingLeft="54dp"
        android:background="#D9D9D9"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:textColor="#000000"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/bt_configurar"
        app:layout_constraintTop_toBottomOf="@+id/et_ficha2"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:text="@string/txt_btn_visualizar"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:background="@drawable/shape_login_buttom_custom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        />




</androidx.constraintlayout.widget.ConstraintLayout>