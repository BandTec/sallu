<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FC6963"
    tools:context=".Activity_configuracao"
    >

    <ImageView
        android:layout_width="180dp"
        android:layout_height="238dp"
        android:id="@+id/iv_fotoPerfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/user"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Fernandola Maia"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="138dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_usuario"
        app:layout_constraintTop_toBottomOf="@+id/iv_fotoPerfil"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Configuração"
        android:textColor="#312E38"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="145dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_configuracao"
        app:layout_constraintTop_toBottomOf="@+id/tv_usuario"/>

    <EditText
        android:layout_width="905px"
        android:layout_height="55dp"
        android:id="@+id/et_nome"
        android:hint="Altere seu nome"
        app:layout_constraintTop_toBottomOf="@+id/tv_configuracao"
        android:paddingLeft="54dp"
        android:background="@drawable/bg_txt_username"
        android:layout_marginTop="1dp"
        android:textSize="18sp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:layout_width="905px"
        android:layout_height="55dp"
        android:id="@+id/et_gmail"
        android:hint="Altere seu gmail"
        app:layout_constraintTop_toBottomOf="@+id/et_nome"
        android:paddingLeft="54dp"
        android:background="@drawable/bg_txt_email"
        android:layout_marginTop="1dp"
        android:textSize="18sp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:layout_width="905px"
        android:layout_height="55dp"
        android:id="@+id/et_telefone"
        android:hint="Altere seu telefone"
        app:layout_constraintTop_toBottomOf="@+id/et_gmail"
        android:paddingLeft="54dp"
        android:background="@drawable/bg_txt_username"
        android:layout_marginTop="1dp"
        android:textSize="18sp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:layout_width="905px"
        android:layout_height="55dp"
        android:id="@+id/et_senhaAtual"
        android:hint="Digite sua senha atual"
        app:layout_constraintTop_toBottomOf="@+id/et_telefone"
        android:paddingLeft="54dp"
        android:background="@drawable/bg_txt_password"
        android:layout_marginTop="1dp"
        android:textSize="18sp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:layout_width="905px"
        android:layout_height="55dp"
        android:id="@+id/et_senhaNova"
        android:hint="Digite sua nova senha"
        app:layout_constraintTop_toBottomOf="@+id/et_senhaAtual"
        android:paddingLeft="54dp"
        android:background="@drawable/bg_txt_password"
        android:layout_marginTop="1dp"
        android:textSize="18sp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:layout_width="905px"
        android:layout_height="55dp"
        android:id="@+id/et_confirmaSenha"
        android:hint="Confirme sua senha"
        app:layout_constraintTop_toBottomOf="@+id/et_senhaNova"
        android:paddingLeft="54dp"
        android:background="@drawable/bg_txt_password"
        android:layout_marginTop="1dp"
        android:textSize="18sp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/bt_configurar"
        app:layout_constraintTop_toBottomOf="@+id/et_confirmaSenha"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_marginBottom="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Alterar"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:background="@drawable/shape_login_buttom_custom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bt_configurar"
        android:text="Alteração Finalizada"
        android:id="@+id/swAlteracaoFinalizada"
        android:checked="true"
        android:textColor="#FFF"
        android:textSize="15dp"
        android:paddingLeft="70dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>